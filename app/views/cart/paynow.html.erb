			//console.log( index+"==> ready! =>"+this.checked +"===> "+this.value);	
			$(".payment-options").show();
		});
		
	});

	$(".amountpay").each(function(index){
		if(this.checked){
			if(this.value=='1'){
				$("#card-details1").show();
				$("#card-details").hide();
			}
			else{
				$("#card-details1").hide();
				$("#card-details").show();
			}
		}
		else{
				$("#card-details1").hide();
				$("#card-details").hide();
			}
		
		$(this).click(function(){
			//console.log( index+"==> ready! =>"+this.checked +"===> "+this.value);	
			if(this.checked){
				if(this.value=='1'){
					$("#card-details1").show();
					$("#card-details").hide();
				}
				else{
					$("#card-details1").hide();
					$("#card-details").show();
				}
			}
			else{
				$("#card-details1").hide();
