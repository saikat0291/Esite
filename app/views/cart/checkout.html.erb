			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">Item</td>
							<td class="description"></td>
							<td class="price">Price</td>
							<td class="quantity">Quantity</td>
							<td class="total">Total</td>
							<td></td>
						</tr>
					</thead>
					<tbody>
						<% total=0 %>
						<% @updatedProdList.each do |product| %>
						<% product_id=product.product_id %>
						<% quantity= product.quantity %>
						<% currentProduct =Admin::Product.find(product.product_id) %>
						<tr>
							<td class="cart_product">
								<a href=""><%= image_tag("upload/"+currentProduct.product_image) %></a>
							</td>
							<td class="cart_description">
								<h4><a href=""><%= link_to currentProduct.product_name, currentProduct %></a></h4>
								<p>Web ID: 1089772</p>
							</td>
							<td class="cart_price">
								<p><%= number_to_currency(product.price, :unit => "$") %></p>
							</td>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									<input class="cart_quantity_input" type="text" name="quantity" value="<%= product.quantity %>" disabled="true" autocomplete="off" size="2">
								</div>
							</td>
							<td class="cart_total">
									<% total+= product.quantity * product.price %>
									<%if quantity == 0%>
										<a href="/cart/clearcartById/<%=product.product_id%>"></a>
									<% end %>
								<p class="cart_total_price"><%= product.quantity * product.price %></p>
							</td>
						</tr>						
						<% end %>
						
						<% if @cart.empty? %>
						<tr><td><h2 style="text-align: center;color: red">Your cart is currently empty. Please </h2></td></tr>
						<% end %>
						<tr>
							<td colspan="4">&nbsp;</td>
							<td colspan="2">
								<table class="table table-condensed total-result">
									<tr>
										<td>Cart Sub Total</td>
										<td>$59</td>
									</tr>
									<tr>
