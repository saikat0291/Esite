										<td>Free</td>										
									</tr>
									<tr>
										<td>Total</td>
										<% if total != 0%>
										<%total+=59+2%>
										<% end %>
										<td><span><%= number_to_currency(total, :unit => "$")%></span></td>
									</tr>
								</table>
							</td>
						</tr>
					</tbody>
				</table>
